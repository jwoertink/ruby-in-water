#!/bin/bash
set -euo pipefail
IFS=$'\n\t'

readonly threads=2
readonly base="http://localhost:9292"

check_prereq() {
  command -v wrk >/dev/null 2>&1 || { echo >&2 "Could not locate required wrk. Aborting."; exit 1; }
}

measure_api() {
  measure "/"
}

measure() {
  local endpoint=$1

  echo "Measuring $endpoint"
  wrk -t $threads $base$endpoint
}

main() {
  check_prereq
  measure_api
}

main
